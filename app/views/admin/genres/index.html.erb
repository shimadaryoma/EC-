<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>ジャンル一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th>ジャンル</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do  %>
              <tr>
                <td><%= link_to admin_genres_edit_path(genre.id) do %>
                    <%= genre.name %>
                  <% end %>
                </td>
            <% end %>
              </tr>
          </tbody>
        </table>
          <h2 class="mt-3">New genre</h2>
           <%= form_with model: @genre do |f| %>
            <h4>name</h4>
              <%= f.text_field :name %>
             <%= f.submit 'Create Book',class: 'btn btn-success' %>
          <% end %>
      </div>
    </div>
  </div>
