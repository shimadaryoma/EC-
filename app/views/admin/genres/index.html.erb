<%= render "admin/shared/links" %>  
  <div class="container px-5 px-sm-0">
    <div class="row mt-3">
      <div class="col-md-8 offset-md-1">
        <h2 class="bg-light col-md-6 text-center">ジャンル一覧・追加</h2>
            <div class="mt-5 ">
              <%= form_with model: @genre, method: :get,  url: admin_genres_path do |f| %>
                <h4>ジャンル名</h4>
                <%= f.text_field :name %>
                <%= f.submit '新規ジャンル投稿',class: 'btn btn-success' %>
             <% end %>
        <div class="col-5">   
          <table class="table table-hover table-inverse mt-5">
            <thead>
              <tr class="bg-light">
                <th>ジャンル</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td>
                    <%= genre.name %>
                  </td>
                  <td><%= link_to edit_admin_genre_path(genre.id) do %>
                        <div class="btn btn-success">編集する</div>
                      <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
           </table>
         </div> 
      </div>
    </div>
  </div>
