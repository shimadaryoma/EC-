<%= render "admin/shared/links" %>
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-8 offset-md-1">
        <h2 class="bg-light text-center col-7 ">
          <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
        </h2>
        <table class="table table-borderless mt-3">
          <thead>
            <tr>
              <th class="col-3">
                会員ID
              </th>
             <td>
                <%= @customer.id %>
              </td>
            </tr>
            <tr>
              <th>
                氏名
              </th>
              <td>
                <%= @customer.first_name %> <%= @customer.last_name %>
              </td>
            </tr>
            <tr>
              <th>
                フリガナ
              </th>
              <td>
                <%= @customer.first_name_kana %> <%= @customer.last_name_kana %>
              </td>
            </tr>
            <tr>
              <th>
                郵便番号
              </th>
              <td>
                <%= @customer.postal_code %>
              </td>
            </tr>
            <tr>
              <th>
                住所
              </th>
              <td>
                <%= @customer.address %>
              </td>
            </tr>
            <tr>
              <th>
                電話番号
              </th>
              <td>
                <%= @customer.telephone_number %>
              </td>
            </tr>
            <tr>
              <th>
                メールアドレス
              </th>
              <td>
                <%= @customer.email %>
              </td>
            </tr>
            <tr>
              <th>
                会員ステータス
              </th>
              <td>
                <% if @customer.is_deleted == false %>
                  <p class="text-success pt-auto">
                    有効
                  </p>
                <% else %>
                  <p class="text-secondary ">
                    退会
                  </p>
                <% end %>
              </td>
            </tr>
            <tr>
              <th class="colspan-3">
              </th>
              <td class="col-3">
                <%= link_to "編集する",  edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
              </td>
              <td>
                 <%= link_to "注文履歴一覧を見る", admin_homes_top_path, class: "btn btn-info" %>
              </td>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>

