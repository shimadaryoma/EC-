<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>注文履歴一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do %>
              <tr>
                <td><%= link_to admin_order_show_path(order.id) do %>
                      <%= @order_details.order_id %>
                    <% end %>
                </td>
                <td>
                    <%= @customer.last_name %>
                    <%= @customer.first.name %>
                </td>
                <td><%= @order_details.amount %></td>
                <td><%= @order_details.create_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>