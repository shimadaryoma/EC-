
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%= form_with model: @item do |f| %>
        <div class="m-sm-1">
          <label for="inputName">名前</label>
        </div>
        <%= f.text_field :name %>
        <div class="m-sm-1">
          <label for="inputImage">商品説明</label>
        </div>
        <%= f.text_area :introduction %>
        <div class="m-sm-1">
          <label for="inputName">税抜価格</label>
        </div>
        <%= f.text_field :price %>
        <div class="m-sm-1 ">
          <%= f.submit "Update",class: 'btn btn-success' %>
        </div>
        <% end %>
    </div>
  </div>
</div>