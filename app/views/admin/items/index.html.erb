<%= render "admin/shared/links" %>
<p><%= notice %></p>
  <div class="container px-sm-0">
      <div class="row">
        <div class="col-md-8 offset-md-1">
          <h2 class="mt-5 bg-light col-3 align-center">商品一覧</h2>
          <table class="table table-hover table-inverse mt-5 ">
            <thead>
              <tr>
                <th class="bg-light">商品ID</th>
                <th class="bg-light">商品名</th>
                <th class="bg-light">商品説明</th>
                <th class="bg-light">税抜価格</th>
                <th class="bg-light">ジャンル</th>
                <th class="bg-light">販売ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td>
                    <%= item.id %>
                  </td>
                  <td>
                    <%= link_to admin_item_path(item.id) do %>
                      <%= item.name %>
                    <% end %>
                  </td>
                  <td>
                    <%= item.introduction %>
                  </td>
                  <td>
                    <%= item.price %>
                  </td>
                  <td>
                    <%= item.genre.name %>
                  </td>
                 <td>
                   <% if item.is_active==true %>
                     <p class="text-success">販売中</p>
                   <% else %>
                     <P class="text-secondary">販売停止中</P>
                   <% end %>
                 </td>
                </tr>
              <% end %>
              <%= paginate @items %>
            </tbody>
          </table>
        </div>
      </div>
    </div>