<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>商品一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th>名前</th>
              <th>商品説明</th>
              <th>価格（税込）</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do %>
              <tr>
                <td><%= link_to admin_items_edit_path(item.id) do %>
                  <%= item.name %>
                  <% end %>
                <td>
                <td><%= link_to admin_items_edit_path(item.id)  do %>
                    <%= item.introduction %>
                    <% end %>
                </td>
                <td><%= item.price %>
                </td>
                <td><<%= image_tag item.image(100,100) %>
                </td>
               <td><<%= item.is_active %>
               </td>                
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>