<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>商品詳細</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @item.image(100,100)%>
            </td>
            <td>
              <%= link_to admin_items_edit_path(@item.id) do %>
                <% @item.name %>
              <% end %>
            </td>
            <td>
              <%= @item.introduction %>
            </td>
            <td>
              <%= @item.price %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
