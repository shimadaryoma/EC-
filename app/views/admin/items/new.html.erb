<%= render "admin/shared/links" %>
  <div class="container">
    <div class="column">
      <h2 class="bg-light mt-3 col-3">新規商品登録</h2>
        <div class="row">
          <div class="mx-auto col-11 col-sm-15 col-lg-8 col-xl-6">
             <%= form_with model: @item, url: admin_items_path do |f| %>
               <div class="field row">
                 <div class="px-3 pt-3">
                   <%= f.label :商品画像 %>
                 </div>
                 <div class="px-3 pt-3">
                   <%= f.file_field :image, accept: "image/*" %>
                 </div>
               </div>

               <div class="field row">
                 <div class="px-3 pt-3">
                   <%= f.label :商品名　 %>
                 </div>
                 <div class="px-3 pt-3 ">
                   <%= f.text_field :name %>
                 </div>
               </div>

               <div class="field row">
                 <div class="px-3 pt-3">
                   <%= f.label :商品説明 %>
                 </div>
                 <div class="px-3 pt-3 ">
                   <%= f.text_area :introduction %>
                 </div>
               </div>
               <!-- f.collection_select :保存先のカラム名, 選択肢に使うオブジェクト, :一つ目の引数に渡す値, :選択肢に使うカラム名, include_blank: "選択して下さい" -->
               <div class="field row">
                 <div class="px-3 pt-3">
                   <%= f.label :ジャンル  %>
                 </div>
                 <div class="px-3 pt-3 ">
                   <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "選択して下さい" %>
                 </div>
               </div>

               <div class="field row">
                 <div class="px-3 pt-3">
                   <%= f.label :税抜価格 %>
                 </div>
                 <div class="px-3 pt-3 ">
                   <%= f.number_field :price %>
                 </div>
               </div>

               <div class="field row">
                 <div class="px-3 pt-3">
                   <%= f.label :販売ステータス %>
                 </div>
                 <div class="px-3 pt-3 ">
                   <%= f.radio_button :is_active, :true %>販売中
                   <%= f.radio_button :is_active, :false %>販売停止中
                 </div>
               </div>

               <div class="mt-3 ">
                 <%= f.submit '新規登録',class: 'btn btn-success' %>
               </div>
              <% end %>
        </div>
      </div>
    </div>
  </div>