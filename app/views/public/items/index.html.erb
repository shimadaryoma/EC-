<%= render "public/shared/links" %>
  <div class="container">
    <div class="mt-5 ">
      <h4 class="row">
        商品一覧
        <p>(全<%= @items.count %>件)</p>
      </h4>
      <div class="row">
        <% @items.each do |item| %>
          <div class="mx-5">
            <table>
              <tbody>
                <tr>
                  <td>
                    <%= link_to item_path(item.id) do %>
                      <%= image_tag item.image, size: "200x180" %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <%= item.name %>
                  </td>
                </tr>
                <tr>
                  <td>
                    ¥<%= item.price %>
                  </td>
                </tr>
             </tbody>
            </table>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>