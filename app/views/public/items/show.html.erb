<%= render "public/shared/links" %>
  <div class="container mt-5">
    <div class="col-md-8 offset-md-1">
      <div class="row">
        <div>
          <% if @item.image.attached? %>
            <%= image_tag @item.image %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        </div>
        <div class="column mx-5">
          <div>
            <h2>
              <strong>
                <%= @item.name %>
              </strong>
            </h2>
          </div>
          
          <div class="mt-3">
            <p>
              <%= @item.introduction %>
            </p>
          </div>

          <div class="mt-5">
            <strong>
              ¥<%= @item.price / 10 + @item.price %> 
            </strong>
            (税込)
          </div>
          
          <div class="mt-5">
           <%= form_with model: @cart_item,  url: cart_items_path, method: :get do |f| %>
             <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
             <%= f.submit "カートに入れる", class: "btn btn-success" %>
           <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
