<%= render "public/shared/links" %>
  <div class="container">
    <h2 class="col-4 mt-5 text-center">
      注文履歴詳細
    </h2>
    <div class="row mt-5">
      <div class="col-7">
        <h4>
          注文情報
        </h4>
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th class="col-2">
                注文日
              </th>
              <td class="col-6">
                <%= @order.created_at.strftime('%Y/%m/%d') %>
              </td>
            </tr>
            <tr>
              <th>
                配送先
              </th>
              <td>
                〒<%= @order.shipping_postal_code %><br>
                <%= @order.shipping_address %><br>
                <%= @order.shipping_name %>
              </td>
            </tr>
            <tr>
              <th>
                支払方法
              </th>
              <td>
                <%= @order.payment_method_i18n %>
              </td>
            </tr>
            <tr>
              <th>
                ステータス
              </th>
              <td>
                <%= @order.order_received_status_i18n %>
              </td>
            </tr>
          </thead>
        </table>
      </div>
      <div class="col-4">
        <h3>
          請求情報
        </h3>
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th>
                商品合計
              </th>
              <td>
                <%= @order.total_payment %>
              </td>
            </tr>
            <tr>
              <th>
                送料
              </th>
              <td>
                <%= @order.postage %>
              </td>
            </tr>
            <tr>
              <th>
                ご請求額
              </th>
              <td>
                <%= @order.postage + @order.total_payment%>
              </td>
            </tr>
          </thead>
        </table>
      </div>
    </div>
    <div class="mt-5">
      <table class="table table-bordered ">
        <thead class="thead-light">
          <tr>
            <th>
              商品
            </th>
            <th>
              単価(税込)
            </th>
            <th>
              個数
            </th>
            <th>
              小計
            </th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order| %>
            <tr>
              <td>
                <%= order.item.name %>
              </td>
              <td>
                <%= order.item.with_tax_price%>
              </td>
              <td>
                <%= order.amount %>
              </td>
              <td>
                <%= order.subtotal %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>