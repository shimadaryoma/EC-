<%= render "public/shared/links" %>
  <div class="container">
    <div class="mt-5">
      <h2 class="text-center bg-light col-4">
        注文情報一覧
      </h2>
      <table class="table table-bordered mt-5">
        <thead class="thead-light">
          <th class="col-1">
            注文日
          </th>
          <th class="col-5">
            配送先
          </th>
          <th class="col-2">
            注文商品
          </th>
          <th class="col-1">
            支払金額
          </th>
          <th class="col-2">
            ステータス
          </th>
          <th class="col-2">
            注文詳細
          </th>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                〒<%= order.shipping_postal_code %><br>
                <%= order.shipping_address %>
                <%= order.shipping_name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                 <% end %>
              </td>
              <td>
                <%= order.total_payment %>
              </td>
              <td>
                <%= order.order_received_status_i18n %>
              </td>
              <td>
                <%= link_to "表示する", order_path(order.id) %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>