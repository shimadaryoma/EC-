<%= render "public/shared/links" %>
<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-15 col-lg-8 col-xl-9">
      <h2 class="bg-light col-4 text-center mt-3">新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: customer_registration_path ) do |f|%>

        <%= render "public/shared/error_messages", resource: @customer %>

        <table class="table table-hover table-inverse table-borderless mt-5">
          <tbody>
            <tr>
              <th>名前</th>
              <td>  (性)　  <%= f.text_field :first_name, autocomplete: "first_name" %></td>
              <td>  (名)  　<%= f.text_field :last_name, autocomplete: "last_name" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>(セイ)  <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td>
              <td>(メイ)  <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td>　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td>郵便番号<br>(ハイフンなし)</td>
              <td>　　　<%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td>　　　<%= f.text_field :address %></td>
            </tr>
            <tr>
              <td>電話番号<br>(ハイフンなし)</td>
              <td>　　　<%= f.number_field :telephone_number, autocomplete: "telephone_number" %></td>
            </tr>
            <tr>
              <td>パスワード<br>(6文字以上)</td>
              <td>

              　<%='　　'%><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td>　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録",class: 'btn btn-success' %></td>
            </tr>
          </tbody>
        </table>
      <% end %>

      <h4 class="bg-light col-4 text-center">既に登録済みの方</h4>
        <p class="px-5">
          <%= link_to "こちら", new_customer_session_path %>
          からログインしてください。
        </p>
    </div>
  </div>
</div>
