<%= render "public/shared/links" %>
  <div class="container">
    <h2 class="bg-light mx-5 mt-5 col-3 text-center">マイページ</h2>
    <div class="row mt-5">
      <div>
        <h3>
          <strong>
            登録情報
          </strong>
        </h3>
      </div>
      <div class="mx-5">
        <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
      </div>
    </div>
    <table class="table table-bordered col-8 mt-3">
      <tr>
        <th class="bg-light col-2">
          氏名
        </th>
        <td class="col-5">
          <%= @customer.first_name %> <%= @customer.last_name %>
        </td>
      </tr>
      <tr>
        <th>
          カナ
        </th>
        <td>
          <%= @customer.first_name_kana %> <%= @customer.last_name_kana %>
        </td>
      </tr>
      <tr>
        <th>
          郵便番号
        </th>
        <td>
          <%= @customer.postal_code %>
        </td>
      </tr>
      <tr>
        <th>
          住所
        </th>
        <td>
          <%= @customer.address %>
        </td>
      </tr>
      <tr>
        <th>
          電話番号
        </th>
        <td>
          <%= @customer.telephone_number %>
        </td>
      </tr>
      <tr>
        <th>
          メールアドレス
        </th>
        <td>
          <%= @customer.email %>
        </td>
      </tr>
    </table>
    <div class="column mt-3">
      <div class="row mt-4">
        <h3>
          <strong>
            配送先　
          </strong>
        </h3>
        <div class="mx-5">
          <%= link_to "一覧を見る", addresses_path, class: "btn btn-info" %>
        </div>
      </div>
      
      <div class="row mt-4">
        <h3>
          <strong>
            注文履歴
          </strong>
        </h3>
        <div class="mx-5">
          <%= link_to "一覧を見る", orders_path, class: "btn btn-info" %>
        </div>
      </div>      
      
    </div>
  </div>

